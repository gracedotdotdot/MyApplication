<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17215E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="104dp"
            android:layout_height="81dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/menu"
            app:srcCompat="@drawable/ctlogo_small" />

        <TextView

            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:text="Temperature"
            android:textColor="#1B2D8B"
            android:textSize="35sp" />
      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Current Temp"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/electricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="℃"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/bview"
        android:layout_width="249dp"
        android:layout_height="261dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/temp_low"
        android:contentDescription="low temp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Desired temp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/desired_temp_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="0.3"
            android:text="25"
            android:textColor="#ffffff"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="0.2"
            android:text="℃"
            android:textColor="#ffffff"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/up"
                android:layout_width="82dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/triangle"
                android:contentDescription="temp_up" />

            <ImageButton
                android:id="@+id/down"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:background="@drawable/invert_triangle"
                android:contentDescription="temp_down" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>